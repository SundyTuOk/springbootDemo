<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/mybatis-3-mapper.dtd">
<mapper namespace="com.sf.dao.AreaDAO">
	<resultMap type="com.sf.bean.Area" id="areaMap">
         <id column="Area_ID" property="areaID"/>
         <result column="Area_Name" property="areaName"/>
         <result column="Area_Num" property="areaNum"/>
         <result column="DLMode_FileAddress" property="DLModeFileAddress"/>
         <result column="JGMode_FileAddress" property="JGModeFileAddress"/>
         <result column="SuperiorArea_ID" property="SuperiorAreaID"/>
         <result column="AreaList" property="AreaList"/>
    </resultMap>
    
    <select id="getAllAreas" resultMap="areaMap">
        select * from area
    </select>
    
    <select id="getAreaByAreaID" resultMap="areaMap">
        select * from area where area_id = #{areaID}
    </select>
    
    <select id="getLastArea" resultMap="areaMap">
        select top 1 * from area ORDER BY area_id desc
    </select>
    
    <insert id="addArea" useGeneratedKeys="true" keyProperty="areaID" parameterType="com.sf.bean.Area">
    	INSERT INTO Area(<if test="areaID != null">Area_ID,</if> Area_Num, Area_Name, DLMode_FileAddress, JGMode_FileAddress, SuperiorArea_ID, AreaList) 
	VALUES(<if test="areaID != null">#{areaID},</if> #{areaNum}, #{areaName}, #{DLModeFileAddress}, #{JGModeFileAddress}, #{SuperiorAreaID}, #{AreaList})
    </insert>
    
    <delete id="deleteArea" parameterType="string">  
        <!-- delete from Area where Area_Num in(7789,7790) -->  
        <!-- forEach : 用来循环 collection : 用来指定循环的数据的类型 可以填的值有：array,list,map item   
            : 循环中为每个循环的数据指定一个别名 index : 循环中循环的下标 open : 开始 close : 结束 separator : 数组中元素之间的分隔符 -->  
        <!-- delete from Area where Area_Num in  
        <foreach collection="list" item="arr" index="no" open="("  
            separator="," close=")">  
            #{arr}  
        </foreach>  --> 
        delete from Area where Area_Num = #{areaNum}
    </delete>
    
    <update id="updateArea" parameterType="com.sf.bean.Area">
    	update Area
        <set>
           <!--  <if test="areaID != null">Area_ID=#{areaID},</if> -->
            <if test="areaName != null">Area_Name=#{areaName},</if>
            <if test="areaNum != null">Area_Num=#{areaNum},</if>
            <if test="DLModeFileAddress != null">DLMode_FileAddress=#{DLModeFileAddress},</if>
            <if test="JGModeFileAddress != null">JGMode_FileAddress=#{JGModeFileAddress},</if>
            <if test="SuperiorAreaID != null">SuperiorArea_ID=#{SuperiorAreaID},</if>
            <if test="AreaList != null">AreaList=#{AreaList},</if>
        </set>
        where Area_ID=#{areaID}
    </update>

    <select id="getAreaByAreaNum" resultMap="areaMap">
        select * from area where Area_Num = #{areaNum}
    </select>
        
    <select id="getAreasBySuperiorAreaID" resultMap="areaMap">
        select * from area where SuperiorArea_ID = #{superAreaID}
    </select>
</mapper>